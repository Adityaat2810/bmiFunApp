<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kongo_pink"
    tools:context=".obesity">

    <TextView
        android:layout_marginTop="13dp"
        android:padding="13dp"
        android:textStyle="italic|bold"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:background="@color/tumble_weed"
        android:id="@+id/textView3"
        android:layout_width="302dp"
        android:layout_height="85dp"
        android:text="Your BMI is more than 30\n you comes under obesity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="375dp"
        android:layout_height="258dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/g" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_height="206dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/excercise" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="218dp"
        android:layout_height="121dp"
        android:textColor="@color/black"
        android:padding="20dp"
        android:textSize="20dp"
        android:textStyle="italic|bold"
        android:background="@color/tumble_weed"
        android:text="Do some exercise dude"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>